/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

#include <dt-bindings/led/led.h>
#include <dt-bindings/zmk/matrix_transform.h>
#include "zitaotech_sofle-layouts.dtsi"


/ {
    model = "zitaotech_sofle";
    compatible = "ZitaoTech,zitaotech-sofle";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,console = &cdc_acm_uart;
        zmk,kscan = &kscan0;
        zmk,physical-layouts = &zitaotech_sofle_layout;
        zmk,studio-rpc-uart = &cdc_acm_uart; // âœ… 
    };
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <6>;
        map = <
RC(0,0)  RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(6,7)             RC(6,14)           RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,13)
RC(1,0)  RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                                         RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12) RC(1,13)
RC(2,0)  RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(6,6)             RC(6,15)           RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12) RC(2,13)
RC(3,0)  RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(5,7)  RC(5,6)    RC(5,15) RC(5,14)  RC(3,8)  RC(3,9)  RC(3,10) RC(3,11) RC(3,12) RC(3,13)
         RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)                                         RC(4,8)  RC(4,9)  RC(4,10) RC(4,11) RC(4,12)
        >;
    };

left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
        b-gpios = <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
        resolution = <4>;
        steps = <30>;
        status = "disabled";
     };

right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
        b-gpios = <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
        resolution = <4>;
        steps = <30>;
        status = "disabled";
     };

     sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <15>;
    }; 

};

/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        /* BB Trackball */
        trackpoint_split: trackpoint_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };

    };

    /* Listeners */
    trackpoint_listener: trackpoint_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackpoint_split>;
    };

};

&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};

&zitaotech_sofle_layout{
	transform = <&default_transform>;
	kscan = <&kscan0>;
};  

zephyr_udc0: &usbd { 
    compatible = "nordic,nrf-usbd"; 
    status = "okay"; 
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        sd_partition: partition@0 {
            reg = <0x00000000 0x00001000>;
        };

        code_partition: partition@1000 {
            reg = <0x00001000 0x000d3000>;
        };

        storage_partition: partition@d4000 {
            reg = <0x000d4000 0x00020000>;
        };

        boot_partition: partition@f4000 {
            reg = <0x000f4000 0x0000c000>;
        };
    };
};

